<h2><%= @post.title%></h2>
<p><%= @post.body %> </p>

<hr>
<%= link_to "Edit", edit_post_path(@post), :class =>  'btn btn-default' %>
<%= link_to "Delete", post_path(@post),
            method: :delete,
            data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete this post?"},
             :class =>  'btn btn-danger' %>

<hr>

